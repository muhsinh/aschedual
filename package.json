{
  "name": "aschedual",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "dev:web": "pnpm -C apps/web dev",
    "dev:ext": "echo 'Extension scaffold only. No dev server implemented.'",
    "build": "pnpm -C apps/web build",
    "start": "pnpm -C apps/web start",
    "lint": "pnpm -C apps/web lint",
    "format": "prettier --check .",
    "test": "echo 'No test suite configured at the workspace root.'",
    "db:generate": "pnpm -C apps/web db:generate",
    "db:migrate": "pnpm -C apps/web db:migrate",
    "db:studio": "pnpm -C apps/web db:studio",
    "check:no-secrets": "bash ./scripts/check-no-secrets.sh",
    "prepush:verify": "bash ./scripts/prepush-verify.sh"
  },
  "devDependencies": {
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
